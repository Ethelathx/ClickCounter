<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ddbea9"
    android:orientation="vertical"
    tools:context=".EditList">

    <androidx.cardview.widget.CardView
        android:layout_width="370dp"
        android:layout_height="340dp"
        android:layout_gravity="center"
        android:layout_marginTop="130dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="40dp">

        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"
            android:backgroundTintMode="add"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Name" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="110dp"
            android:text="Number of counts:"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvCounts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="145dp"
            android:text="0"
            android:textSize="36sp" />

        <Button
            android:id="@+id/btnSave1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="210dp"
            android:layout_marginRight="15dp"
            android:backgroundTint="#b7b7a4"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="save"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvCount1"
            android:layout_marginTop="270dp"
            android:layout_marginBottom="20dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnBck"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:backgroundTint="#b7b7a4"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="back"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btnDelete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:backgroundTint="#b7b7a4"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="delete"
                android:textSize="18sp"
                app:rippleColor="#FFFFFF" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>